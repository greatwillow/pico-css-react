{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"jsx": "react",
		"esModuleInterop": true
	},
	"include": [
		"./src/**/*.tsx",
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}